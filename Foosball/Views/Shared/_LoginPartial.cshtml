
@if (Session["UserID"] != null)
{
    <ul class="nav navbar-nav navbar-right" style="font-weight:bold;">
        <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Witaj @Session["UserName"].ToString()!<b class="caret"></b></a>
            <ul class="dropdown-menu">
                <li>@Html.ActionLink("Wyloguj", "Logout", "Access")</li>
